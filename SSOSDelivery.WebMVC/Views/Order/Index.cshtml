@model IEnumerable<SSOSDelivery.Model.OrderListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if(TempData.ContainsKey("SaveResult"))
            {
                <div class=" alert alert-sucess fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                    @TempData["SaveResult"]
                </div>
            }
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.OrderID  }, htmlAttributes: new { @class = "btn btn-warning btn-md" }) |
            @Html.ActionLink("Details", "Details", new {  id=item.OrderID }, htmlAttributes: new { @class = "btn btn-info btn-md" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrderID}, htmlAttributes: new { @class = "btn btn-success btn-md" })
        </td>
    </tr>
}

</table>
